{
  "name": "vue-draggable-grid-dashboard",
  "private": false,
  "version": "1.0.3",
  "type": "module",
  "description": "A powerful Vue 3 draggable grid dashboard component with drag, resize, add, delete functionality",
  "keywords": [
    "vue",
    "vue3",
    "draggable",
    "grid",
    "dashboard",
    "component",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "homepage": "https://ttmeok.github.io/vue-draggable-grid-dashboard/",
  "main": "dist/vue-draggable-grid-dashboard.umd.js",
  "module": "dist/vue-draggable-grid-dashboard.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/vue-draggable-grid-dashboard.es.js",
      "require": "./dist/vue-draggable-grid-dashboard.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/vue-draggable-grid-dashboard.css": "./dist/vue-draggable-grid-dashboard.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run type:build && vite build",
    "build:demo": "vite build --config vite.demo.config.ts",
    "type:build": "vue-tsc --project tsconfig.build.json",
    "preview": "vite preview"
  },
  "dependencies": {
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "typescript": "^5.2.0",
    "vite": "^5.0.0",
    "vue-tsc": "^1.8.0"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
